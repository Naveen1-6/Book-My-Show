pipeline {
    agent any

  
    tools {
        jdk 'jdk17'
        nodejs 'node'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        KUBECONFIG = credentials('kubeconfig-cred')
        EKS_CLUSTER_NAME = 'kranthiclus'
        AWS_REGION = 'ap-southeast-2'
    }

    stages {

        stage('Clean Workspace') {
            steps {
                echo "üßπ Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                echo "üì¶ Cloning repository..."
                git branch: 'main', url: 'https://github.com/KastroVKiran/Book-My-Show.git'
                sh 'ls -la'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo "üîç Starting SonarQube Analysis..."
                withSonarQubeEnv('sonar-server') {
                    sh '''
                        set -e
                        echo "Sonar Scanner Home: $SCANNER_HOME"
                        $SCANNER_HOME/bin/sonar-scanner \
                          -Dsonar.projectKey=BMS \
                          -Dsonar.projectName=BMS
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                echo "‚úÖ Checking Sonar Quality Gate..."
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'Sonar-token'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "üì¶ Installing dependencies..."
                sh '''
                    set -e
                    cd bookmyshow-app
                    if [ -f package.json ]; then
                        rm -rf node_modules package-lock.json || true
                        npm install
                    else
                        echo "‚ùå package.json not found!"
                        exit 1
                    fi
                '''
            }
        }

        stage('Trivy FS Scan') {
            steps {
                echo "üß™ Running Trivy scan..."
                sh '''
                    set -e
                    trivy fs . > trivyfs.txt || echo "‚ö†Ô∏è Trivy scan failed"
                '''
            }
        }

        stage('Docker Build & Push') {
            steps {
                echo "üê≥ Building and pushing Docker image..."
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh '''
                            set -e
                            docker build -t kranthi6166/bms:latest -f bookmyshow-app/Dockerfile bookmyshow-app
                            docker push kranthi6166/bms:latest
                        '''
                    }
                }
            }
        }

        stage('Deploy to EKS Cluster') {
            steps {
                script {
                    sh '''
                    echo "Verifying AWS credentials..."
                    aws sts get-caller-identity

                    echo "Configuring kubectl for EKS cluster..."
                    aws eks update-kubeconfig --name $EKS_CLUSTER_NAME --region $AWS_REGION

                    echo "Verifying kubeconfig..."
                    kubectl config view

                    echo "Deploying application to EKS..."
                    kubectl apply -f deployment.yml
                    kubectl apply -f service.yml

                    echo "Verifying deployment..."
                    kubectl get pods
                    kubectl get svc
                    '''
                }
            }
        }
    }

    post {
        always {
            echo "üìß Sending build email notification..."
            emailext(
                attachLog: true,
                subject: "'${currentBuild.result}' - BMS Pipeline Build",
                body: "Project: ${env.JOB_NAME}<br/>Build Number: ${env.BUILD_NUMBER}<br/>URL: ${env.BUILD_URL}<br/>",
                to: 'kastrokiran@gmail.com',
                attachmentsPattern: 'trivyfs.txt'
            )
        }
    }
}
