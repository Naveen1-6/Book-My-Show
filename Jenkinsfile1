pipeline {
    agent any

    options {
        ansiColor('xterm')
        timestamps()
    }

    tools {
        jdk 'jdk17'
        nodejs 'node'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        KUBECONFIG = credentials('kubeconfig-cred')
    }

    stages {

        stage('Clean Workspace') {
            steps {
                echo "Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                echo "Cloning repository..."
                git branch: 'main', url: 'https://github.com/KastroVKiran/Book-My-Show.git'
                sh 'ls -la'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo "Starting SonarQube Analysis..."
                withSonarQubeEnv('sonar-server') {
                    sh '''
                        set -e
                        $SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectName=BMS \
                        -Dsonar.projectKey=BMS
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                echo "Checking Sonar Quality Gate..."
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'Sonar-token'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies..."
                sh '''
                    set -e
                    cd bookmyshow-app
                    rm -rf node_modules package-lock.json || true
                    npm install
                '''
            }
        }

        stage('Trivy FS Scan') {
            steps {
                echo "Running Trivy file scan..."
                sh '''
                    set -e
                    trivy fs . > trivyfs.txt
                '''
            }
        }

        stage('Docker Build & Push') {
            steps {
                echo "Building and pushing Docker image..."
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh '''
                            set -e
                            docker build -t kranthi6166/bms:latest -f bookmyshow-app/Dockerfile bookmyshow-app
                            docker push kranthi6166/bms:latest
                        '''
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo "Deploying to Kubernetes..."
                sh '''
                    set -e
                    mkdir -p ~/.kube
                    echo "$KUBECONFIG" > ~/.kube/config
                    sed -i 's|image:.*|image: kranthi6166/bms:latest|' k8s/deployment.yaml
                    kubectl apply -f k8s/deployment.yaml
                    kubectl apply -f k8s/service.yaml
                    kubectl rollout status deployment/bms-deployment
                '''
            }
        }
    }

    post {
        always {
            echo "Sending email notification..."
            emailext(
                attachLog: true,
                subject: "'${currentBuild.result}'",
                body: "Project: ${env.JOB_NAME}<br/>Build Number: ${env.BUILD_NUMBER}<br/>URL: ${env.BUILD_URL}<br/>",
                to: 'kastrokiran@gmail.com',
                attachmentsPattern: 'trivyfs.txt'
            )
        }
    }
}
